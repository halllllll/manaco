{
  "peacock.remoteColor": "#d43e19",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.ts": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnused.ts": "never"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": false,
  "editor.lineNumbers": "on",
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "npm.packageManager": "yarn",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "[graphql]": {
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": "./daisyui.md"
    }
  ],
  "github.copilot.advanced": {
    "authProvider": "github"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#e85b38",
    "activityBar.background": "#e85b38",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#1ae543",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#e85b38",
    "statusBar.background": "#d43e19",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#e85b38",
    "statusBarItem.remoteBackground": "#d43e19",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#d43e19",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#d43e1999",
    "titleBar.inactiveForeground": "#e7e7e799"
  }
}
